{
    "name": "SkyCrypt Themer",
    "description": "Create themes for SkyCrypt",
    "permissions": [
        "storage",
        "declarativeContent"
    ],
    "icons": {
        "128": "assets/logo-128.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://sky.shiiyu.moe/*"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://sky.shiiyu.moe/*"
            ],
            "js": [
                "contentScriptStart.js"
            ],
            "run_at": "document_start"
        }
    ],
    "page_action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "injectable.js",
        "assets/logo-128.png"
    ],
    "manifest_version": 3
}
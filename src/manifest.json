{
    "name": "SkyCrypt Themer",
    "description": "Create themes for SkyCrypt",
    "permissions": [
        "storage"
    ],
    "icons": {
        "128": "assets/logo-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://sky.shiiyu.moe/*"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://sky.shiiyu.moe/*"
            ],
            "js": [
                "contentScriptStart.js"
            ],
            "run_at": "document_start"
        }
    ],
    "page_action": {
        "default_popup": "popup.html",
        "show_matches": ["https://sky.shiiyu.moe/*"]
    },
    "web_accessible_resources": [
        "injectable.js",
        "assets/logo-128.png"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "nstringham@users.noreply.github.com"
        }
    },
    "manifest_version": 2
}